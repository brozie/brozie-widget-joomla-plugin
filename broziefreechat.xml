	<files>
		<filename plugin="broziefreechat">broziefreechat.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_broziefreechat.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_broziefreechat.sys.ini</language>
