	</languages>
	<config>	
		<fields name="params">
			<fieldset name="basic">
				<field	name="colorscheme" type="list"
					default=""
					description="PLG_BROZIEFREECHAT_FIELD_COLORSCHEME_DESC"
					label="PLG_BROZIEFREECHAT_FIELD_COLORSCHEME_LABEL">
						<option value="">PLG_BROZIEFREECHAT_DEFAULT</option>
						<option	value="light">PLG_BROZIEFREECHAT_LIGHT</option>
						<option	value="dark">PLG_BROZIEFREECHAT_DARK</option>				
				</field>
				<field name="width" type="text" default="675" label="PLG_BROZIEFREECHAT_FIELD_WIDTH_LABEL" description="PLG_BROZIEFREECHAT_FIELD_WIDTH_DESC" />
				<field name="height" type="text" default="300" label="PLG_BROZIEFREECHAT_FIELD_HEIGHT_LABEL" description="PLG_BROZIEFREECHAT_FIELD_HEIGHT_DESC"  />
				<field	name="direction" type="list"
					default=""
					description="PLG_BROZIEFREECHAT_FIELD_DIRECTION_DESC"
					label="PLG_BROZIEFREECHAT_FIELD_DIRECTION_LABEL">
						<option value="">PLG_BROZIEFREECHAT_DEFAULT</option>
						<option	value="tl">PLG_BROZIEFREECHAT_TL</option>
						<option	value="tr">PLG_BROZIEFREECHAT_TR</option>				
						<option	value="bl">PLG_BROZIEFREECHAT_BL</option>				
						<option	value="br">PLG_BROZIEFREECHAT_BR</option>				
				</field>				
			</fieldset>
		</fields>	
	</config>
	<params name="basic">
		<param	name="colorscheme" type="list"
			default=""
			description="PLG_BROZIEFREECHAT_FIELD_COLORSCHEME_DESC"
			label="PLG_BROZIEFREECHAT_FIELD_COLORSCHEME_LABEL">
				<option value="">PLG_BROZIEFREECHAT_DEFAULT</option>
				<option	value="light">PLG_BROZIEFREECHAT_LIGHT</option>
				<option	value="dark">PLG_BROZIEFREECHAT_DARK</option>				
